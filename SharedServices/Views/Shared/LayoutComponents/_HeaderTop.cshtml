@inject IViewLocalizer Localizer
@inject IGlobalInfoRepository GloabalInfos
@{ 
    var infos = GloabalInfos.GetInfo();
}

<div class="fables-forth-background-color fables-top-header-signin fixed-band">
    <div class="container">
        <div class="row" id="top-row">
            <div class="col-12 col-sm-2 col-lg-5">
                <div class="dropdown">
                    <button class="dropdown-toggle border-0 bg-transparent fables-third-text-color font-13 lang-dropdown-btn pl-0" type="button" id="dropdownLangButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @Localizer["Langue"]
                    </button>
                    <div class="dropdown-menu white-text p-0 fables-forth-background-color rounded-0 m-0 border-0 lang-dropdown z-index" aria-labelledby="dropdownLangButton"                         >
                        <a asp-route-culture="fr" class="dropdown-item white-color font-13 fables-second-hover-color bordered">
                            <img src="~/template/images/France.png" alt="French flag" class="mr-1"> @Localizer["Français"]
                        </a>
                        <a asp-route-culture="en" class="dropdown-item white-color font-13 fables-second-hover-color bordered">
                            <img src="~/template/images/england.png" alt="England flag" class="mr-1"> @Localizer["Anglais"]
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-5 col-lg-4 text-right">
                <p class="fables-third-text-color font-13"><span class="fables-iconphone"></span> @Localizer["Telephone"] : @infos.Phone</p>
            </div>
            <div class="col-12 col-sm-5 col-lg-3 text-right">
                <p class="fables-third-text-color font-13"><span class="fables-iconemail"></span> Email : @infos.Email</p>
            </div>
        </div>
    </div>
</div>