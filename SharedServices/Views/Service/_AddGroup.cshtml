@inject IViewLocalizer Localizer

<div class="modal-header bg-color-green">
    <p class="heading">Nouvelle catégorie de service</p>
</div>
<div class="modal-body">
    <form action="/" method="post" id="form-group" class="ubuntu-medium row">
        <div class="col-md-12">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group green-border">
                        <label for="title">Nom de la catégorie</label>
                        <input type="text" class="form-control green-border" id="title" name="title" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group green-border">
                        <label for="point">Points par heure</label>
                        <input type="text" class="form-control green-border" id="point" name="point" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="d-flex justify-content-between" style="padding: 1rem; border-top: 1px solid #e9ecef;">
    <a class="btn btn-sm btn-outline-my-green waves-effect" data-dismiss="modal">@Localizer["Annuler"]</a>
    <a class="btn btn-sm bg-color-green waves-effect" id="btn-message" onclick="groupSending();">@Localizer["Sauvegarder"]</a>
</div>