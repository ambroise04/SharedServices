@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}
<div class="container py-lg-5 py-md-4 py-sm-3">
    <div class="row">
        <div class="col-md-12 ubuntu-light">
            <h3 class="ubuntu-medium">@Localizer["PageTitle"]</h3>
            <p>
                @Localizer["Message"]
            </p>
        </div>
    </div>
</div>