@model ICollection<RequestMulticast>
@inject IViewLocalizer Localizer;

@{
    ViewBag.Title = Localizer["Titre"];

    var requests = Model;

    var cultureFR = CultureInfo.CurrentCulture.Name.Contains("fr");
    var culture = (cultureFR) ? CultureInfo.CreateSpecificCulture("fr-FR") : CultureInfo.CreateSpecificCulture("en-US");
}

@section Styles {
    <style>
    </style>
}

<div class="container">
    <div class="row my-4 my-md-5">
        <div class="col-md-12">
            <div class="row mb-4 d-flex align-items-end">
                <div class="col-md-4">
                    <form>
                        <div class="form-group mb-0">
                            <label for="filter">Trier par : </label>
                            <select class="form-control rounded-0 browser-default custom-select" id="filter">
                                <option value="1">Vos services</option>
                                <option value="2">Près de chez vous</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="col-md-5">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input ml-0" id="my-services" name="check">
                        <label class="form-check-label" for="my-services">Afficher seulement les services me correspondant</label>
                    </div>
                </div>
                <div class="col-md-2 offset-md-1 text-center pl-0 d-none d-lg-block">
                    <span class="fables-iconlist fa-fw fables-view-btn fables-list-btn fables-third-border-color fables-third-text-color"></span>
                    <span class="fables-icongrid active fa-fw fables-view-btn fables-grid-btn fables-third-border-color fables-third-text-color"></span>
                </div>
            </div>
            <div class="row">
                @foreach (var request in requests)
                {
                    <div class="col-12 col-sm-6 col-lg-4 fables-product-block">
                        <div class="card rounded-0 mb-4">
                            <div class="row">
                                <div class="fables-product-img col-12">
                                    <img class="card-img-top rounded-0" src="@request.RequesterMulticast.ResizePicture(256, 150)" alt="@request.RequesterMulticast.LastName picture">
                                    <div class="fables-img-overlay">
                                        <ul class="nav fables-product-btns">
                                            <li>
                                                <a asp-action="Details" asp-controller="Request" asp-route-id="@request.Id" class="fables-product-btn" data-toggle="tooltip" data-placement="top"
                                                   title="Plus de détails"><span class="fables-iconeye"></span></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body col-12">
                                    <h5 class="card-title mx-xl-3 mb-0">
                                        <a href="#" class="fables-main-text-color fables-store-product-title fables-second-hover-color">
                                            @request.RequesterMulticast.FirstName @request.RequesterMulticast.LastName
                                        </a>
                                    </h5>
                                    @{
                                        var position = string.Concat(request.RequesterMulticast.PostalCode, " ",
                                            request.RequesterMulticast.City, " - ", request.RequesterMulticast.Country);
                                    }
                                    <p class="store-card-text fables-fifth-text-color font-15 mx-xl-3 my-2"><small>@position</small></p>
                                    <p class="store-card-text fables-fifth-text-color font-15 mx-xl-3 my-3 ubuntu-medium text-color-green">
                                        @request.Service.Title <span class="ubuntu-light">(@request.Point points/H)</span>
                                    </p>
                                    <p class="store-card-text fables-fifth-text-color font-15 mx-xl-3 my-3">
                                        @if (request.DateOfRequest.Year != DateTime.MinValue.Year)
                                        {
                                            <span>Date prévue : @request.DateOfRequest.ToString("dd/MM/yyyy - HH:mm", culture)</span>
                                        }
                                        else
                                        {
                                            <span>Date prévue : Non renseignée</span>
                                        }
                                    </p>
                                    <p class="fables-product-info">
                                        <a request="@request.Id" class="btn btn-sm btn-outline-green-light btn-rounded
                                           fables-hover-btn-color fables-second-text-color font-14 p-2 px-2 px-xl-4 request">
                                            <i class="fas fa-reply fables-btn-value"></i>
                                            <span class="fables-btn-value">RÉPONDRE À LA DEMANDE</span>
                                        </a>
                                    </p>
                                    <p class="store-card-text fables-fifth-text-color font-15 mx-xl-3 mt-3 mb-1">
                                        <small>Demande publiée le @request.DateOfAddition.ToString("dd MMM yyyy | HH:mm", culture)</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link rounded-circle fables-forth-text-color fables-page-link fables-second-hover-background-color" href="#">1</a></li>
                    <li class="page-item"><a class="page-link rounded-circle fables-forth-text-color fables-page-link fables-second-hover-background-color" href="#">2</a></li>
                    <li class="page-item"><a class="page-link rounded-circle fables-forth-text-color fables-page-link fables-page-link fables-second-hover-background-color" href="#">3</a></li>
                    <li><span class="fables-pagi-dots fables-forth-text-color"> .... </span></li>
                    <li class="page-item"><a class="page-link rounded-circle fables-forth-text-color fables-page-link fables-second-hover-background-color" href="#">20</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<partial name="/Views/Discussion/_SearchMessageHeader.cshtml" />
<partial name="/Views/Request/_RequestHeader.cshtml" />
@section Scripts{
    <script src="~/js/search.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/bootstrap-material-datetimepicker-bs4.min.js"></script>
    <script src="~/js/business/request-response.min.js"></script>

    <script type="text/javascript">
        var lang = "@ViewBag.Culture";
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        })
    </script>
}